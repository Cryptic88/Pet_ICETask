@model Pet_ICETask.Models.Pet

@{
    ViewData["Title"] = "ViewPet";
}

<div class="container mt-4">
    <div class="card superhero-card p-4 shadow-lg">
        <div class="row g-4 align-items-center">
            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" style="max-height: 250px;" />
            </div>
            <div class="col-md-8">
                <h2 class="superhero-name">@Model.Name the @Model.Breed</h2>
                <hr />
                <p><strong>Age:</strong> @Model.Age</p>
                <p><strong>Breed:</strong> @Model.Breed</p>
                <p><strong>Adoption Status:</strong> @Model.AdoptionStatus</p>

                @if (ViewBag.FunFact != null)
                {
                    <div class="alert alert-info mt-3">
                        <strong>Fun Fact:</strong> @ViewBag.FunFact
                    </div>
                }

                <div class="mt-4">
                    <a asp-action="ViewAllPets" class="btn btn-secondary"> Back to All Pets</a>
                </div>
            </div>
        </div>
    </div>
</div>
